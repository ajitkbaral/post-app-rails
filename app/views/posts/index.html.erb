<h1>Posts</h1>
<% @posts.each do |post| %>
    <div class="card bg-light">
        <div class="card-body">
            <h3><%= post.title %></h3>
            <small><%= post.description %></small>
            <%= link_to "Read me", post_path(post), :class => "btn btn-primary"  %>
        </div>
    </div>
<% end %>
